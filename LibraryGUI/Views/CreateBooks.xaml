<Page x:Class="LibraryGUI.Views.CreateBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryGUI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Books">

    <Grid Background="#FFD4FFFA">
        <TextBox x:Name="bookText" HorizontalAlignment="Center" Margin="0,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="49" BorderBrush="Black" BorderThickness="3,3,3,3"/>
        <Button Content="Add" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" Height="49" Width="160" Click="Button_Click" BorderBrush="Black" Background="#FF8BBDFF" Foreground="White" FontWeight="Bold" FontSize="24" BorderThickness="3,3,3,3"/>
        <Label Content="Add a Book" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,122,0,0" Height="49" Width="160" Background="#FFD4FFFA" BorderBrush="Black" Foreground="Black" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold" FontSize="19" BorderThickness="3,3,3,3"/>
        <Button x:Name="exit" Content="Exit" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" Height="49" Width="160" BorderBrush="Black" Background="Red" Foreground="White" FontWeight="Bold" FontSize="24" BorderThickness="3,3,3,3" Click="exit_Click"/>

    </Grid>
</Page>
