<Page x:Class="LibraryGUI.Views.CreateBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryGUI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Books">

    <Grid Background="#FFD4FFFA">
        <TextBox x:Name="bookText" HorizontalAlignment="Center" Margin="0,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="49" BorderBrush="Black" BorderThickness="3,3,3,3"/>
        <Button Content="Add" HorizontalAlignment="Center" Margin="0,244,0,0" VerticalAlignment="Top" Height="49" Width="160" Click="Button_Click" BorderBrush="Black" Background="#FF8BBDFF" Foreground="White" FontWeight="Bold" FontSize="24" BorderThickness="3,3,3,3"/>

    </Grid>
</Page>
